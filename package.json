{
  "name": "instafication",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "license": "MIT",
  "packageManager": "bun@1.2",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts,.svelte",
    "cf:typegen": "wrangler types ./src/worker-configuration.d.ts",
    "deploy": "bun run build && bun run cf:typegen && wrangler deploy --minify",
    "generate": "drizzle-kit generate",
    "push": "drizzle-kit push",
    "studio": "drizzle-kit studio",
    "clean": "rm -rf .svelte-kit && rm -rf node_modules && rm -rf .wrangler && rm -rf .svelte-kit && rm -f bun.lock && rm -f package-lock.json && bun i"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.1",
    "@supabase/supabase-js": "^2.53.0",
    "@trpc/client": "^11.4.3",
    "@trpc/server": "^11.4.3",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.44.4",
    "flowbite": "^3.1.2",
    "flowbite-svelte": "^1.11.1",
    "posthog-js": "^1.258.5",
    "resend": "^4.7.0",
    "stripe": "^18.4.0",
    "superjson": "^2.2.2",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^2.1.0",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@internationalized/date": "^3.8.2",
    "@lucide/svelte": "^0.536.0",
    "@sveltejs/adapter-cloudflare": "^7.1.2",
    "@sveltejs/kit": "^2.27.0",
    "@sveltejs/vite-plugin-svelte": "^6.1.0",
    "@tailwindcss/vite": "^4.1.11",
    "@types/pg": "^8.15.5",
    "bits-ui": "^2.9.1",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.32.0",
    "eslint-plugin-svelte": "^3.11.0",
    "mode-watcher": "^1.1.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "svelte": "^5.37.2",
    "svelte-check": "^4.3.0",
    "svelte-flags": "^2.0.1",
    "svelte-sonner": "^1.0.5",
    "tailwindcss": "^4.1.11",
    "tw-animate-css": "^1.3.6",
    "typescript": "^5.9.2",
    "vite": "^7.0.6",
    "wrangler": "^4.27.0"
  }
}